{
  "name": "auth",
  "version": "0.0.1",
  "description": "Auth service for Infragis platform",
  "main": "dist/main/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/abelinsky/infragis"
  },
  "author": "Alexander Belinsky",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && node_modules/typescript/bin/tsc -p tsconfig-build.json && npm run lint",
    "start": "ts-node-dev --tree-kill --exit-child --respawn --transpile-only src/main/server.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "migrate": "npm run build && node_modules/.bin/sequelize db:migrate --env development",
    "migrate:undo": "npm run build && node_modules/.bin/sequelize db:migrate:undo --env development",
    "migrate:undo:all": "npm run build && node_modules/.bin/sequelize db:migrate:undo:all --env development",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "dependencies": {
    "@infragis/common": "0.0.16",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "cookie-session": "^1.4.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.4",
    "sequelize-cli": "^6.2.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/module-alias": "^2.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-session": "^2.0.41",
    "@types/eslint": "^7.2.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.27",
    "@types/pg": "^7.14.4",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.6.0",
    "jest": "^26.4.0",
    "ts-jest": "^26.2.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
